<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="ComicWrap.Themes.LightTheme">

    <Color x:Key="ColorPrimary">#f5f5f5</Color>
    <Color x:Key="ColorPrimaryDark">#e0e0e0</Color>
    <Color x:Key="AccentColor">#40c4ff</Color>
    
    <Color x:Key="MainTextColor">Black</Color>
    <Color x:Key="DisabledTextColor">#aaaaaa</Color>

    <Color x:Key="MainBackgroundColor">#ffffff</Color>
    <OnPlatform x:Key="SecondaryBackgroundColor"
                x:TypeArguments="Color"
                iOS="#ededed"
                Android="#fafafa"/>

    <Color x:Key="ButtonBackgroundColor">LightGray</Color>
    <Color x:Key="ButtonTextColor">Black</Color>

    <Color x:Key="NewIndicatorColor">Turquoise</Color>
    
</ResourceDictionary>