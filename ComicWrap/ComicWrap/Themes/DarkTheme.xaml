<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="ComicWrap.Themes.DarkTheme">

    <Color x:Key="ColorPrimary">#212121</Color>
    <Color x:Key="ColorPrimaryDark">#000000</Color>
    <Color x:Key="AccentColor">#40c4ff</Color>

    <Color x:Key="MainTextColor">White</Color>
    <Color x:Key="DisabledTextColor">Gray</Color>

    <OnPlatform x:Key="MainBackgroundColor"
                x:TypeArguments="Color"
                iOS="#1c1c1c"
                Android="#424242"/>
    <OnPlatform x:Key="SecondaryBackgroundColor"
                x:TypeArguments="Color"
                iOS="#0f0f0f"
                Android="#303030"/>

    <Color x:Key="ButtonBackgroundColor">#737373</Color>
    <Color x:Key="ButtonTextColor">White</Color>

    <Color x:Key="NewIndicatorColor">Turquoise</Color>

</ResourceDictionary>